{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "max-len": [
            "error", {
                "code": 150,
                "comments": 200,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "camelcase": "off",
        "no-return-await": "off"
    }
}
